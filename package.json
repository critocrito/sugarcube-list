{
  "name": "js-lib-scaffold",
  "version": "0.0.0",
  "description": "A scaffolding repository to start a new JS libraries for NodeJS or the browser.",
  "main": "_dist/main.js",
  "browser": "_dist/browser.js",
  "module": "lib/index.js",
  "engines": {
    "node": ">=7.6"
  },
  "config": {
    "srcDir": "lib",
    "testDir": "test",
    "distDir": "_dist"
  },
  "scripts": {
    "commitmsg": "! git rev-parse --abbrev-ref HEAD | grep -q master || validate-commit-msg",
    "precommit": "! git rev-parse --abbrev-ref HEAD | grep -q master || (lint-staged && npm run test)",
    "prepublishOnly": "npm run build",
    "publish": "git push --follow-tags origin master",
    "watch": "npm run test -- -w",
    "test": "cross-env NODE_ENV=test mocha -c -R progress -r babel-core/register -r test/helpers.js $npm_package_config_testDir/**/*.spec.js",
    "coverage": "nyc npm test",
    "lint": "eslint --cache $npm_package_config_testDir $npm_package_config_srcDir",
    "fix": "npm run lint -- --fix",
    "compile": "npm run clean -s && rollup -c",
    "clean": "rimraf $npm_package_config_distDir",
    "build": "npm run lint -s && npm run test -s && npm run compile -s",
    "release": "npm run build -s && standard-version -i Changelog.md -m \"chore(release): Bumped to version %s.\" --sign",
    "release-candidate": "npm run release -- --prerelease \"rc\""
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/critocrito/js-lib-scaffold.git"
  },
  "keywords": [],
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/critocrito/js-lib-scaffold/issues"
  },
  "homepage": "https://gitlab.com/critocrito/js-lib-scaffold#Readme.md",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.3",
    "lint-staged": "^4.2.3",
    "lodash": "^4.17.5",
    "mocha": "^5.0.1",
    "nyc": "^11.5.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "^4.4.2",
    "source-map-support": "^0.5.3",
    "standard-version": "^4.3.0",
    "validate-commit-msg": "^2.13.1"
  }
}
